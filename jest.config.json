{
  "collectCoverage": true,
  "extensionsToTreatAsEsm": [".ts"],
  "moduleFileExtensions": ["js", "ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.ts$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "verbose": true
}
