(1 row)

-- Delete.
BEGIN;
DELETE FROM versioning;
SELECT * FROM versioning;
 a | b b | sys_period
---+-----+------------
(0 rows)

SELECT a, c, upper(sys_period) = CURRENT_TIMESTAMP FROM versioning_history ORDER BY a, sys_period;
